---
layout: layouts/base.njk
---
<div class="col-md-12 p-3 p-md-5"></div>
<div class="container-fluid">
<div class="row mt-5 mb-3">
<div class="col-md-10 mx-auto p-3 p-md-5">
<h1>{{title}}</h1>
<h2 class="mt-3 mb-3">{{description}}</h2>
<div class="p-3">{{content | safe }}</div>
<div class="row">
{% for tag in collections | getKeys | filterTagList %}{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
<div class="col-md-3 col-6 p-3"><a class="btn bg-body-secondary" href="{{ tagUrl }}">{{ tag }}</a></div>
{% endfor %}
</div>
</div>
</div>
</div>