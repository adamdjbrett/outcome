<div class="border-bottom row">
<div class="col-md-4 col-4 p-3">
{% if image %}<img class="img-fluid float-start img-issue me-3" alt="{{title}}" width="100%" height="100%" loading="lazy" 
src="https://wsrv.nl/?url={{metadata.url}}{{image}}&w=400&output=webp"/>{% endif %}
</div>
<div class="col-md-8 col-8 p-3">
<p>{{abstract}}</p>
<p class="mt-3"><small>Published: {{ page.date | readableDate }}</small></p>
{% if pdf_download %}<p><a href="{{pdf_download}}" class="btn btn-orange btn-sm" download>
Download PDF <i class="bi bi-file-earmark-pdf-fill"></i></a></p>{% endif %}
</div>
</div>
<div class="content col-12 mt-3">
{{content | safe }}
</div>