<div class="col-md-3 p-3">
<div class="mt-1 mb-3">
{% if show_toc %}{% if content | toc %}
<div class="mb-3 toci">
<p><strong>On this Page</strong></p>
{{ content | toc| safe }}
</div>
{% endif %}{% endif %}
</div>
{% for l in metadata.sidebar.right %}
<div class="mt-1 mb-3 border-top">
<p class="mt-3"><strong>{{l.title}}</strong></p>
<p>{% for m in l.item %}
<a href="{{m.link}}">{{m.name}}</a><br/>
{% endfor %}</p>
</div>
{% endfor %}
</div>