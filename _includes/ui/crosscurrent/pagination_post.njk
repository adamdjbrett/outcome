{%- if collections.cocor %}
{%- set previousPost = collections.cocor | getPreviousCollectionItem %}
{%- set nextPost = collections.cocor | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="col-md-12">
<div class="row mt-3">
<div class="col-6 p-3 col-md-6">
{%- if previousPost %}<a href="{{ previousPost.url }}" class="btn-orange btn col-12">
<i class="bi bi-arrow-left-short"></i> {{ previousPost.data.title }}
</a>{% endif %}
</div>
<div class="col-md-6 col-6 p-3">
{%- if nextPost %}<a href="{{ nextPost.url }}" class="btn-orange btn col-12">
{{ nextPost.data.title }} <i class="bi bi-arrow-right-short"></i>
</a>{% endif %}
</div>
</div>
</div>
</div>
{%- endif %}
{%- endif %}