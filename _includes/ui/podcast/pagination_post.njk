{%- if collections.pods %}
{%- set previousPost = collections.pods | getPreviousCollectionItem %}
{%- set nextPost = collections.pods | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="col-md-12">
<div class="row mt-3">
<div class="col-6 p-3 col-md-6">
{%- if previousPost %}<a href="{{ previousPost.url }}" class="btn-orange btn col-12">
<i class="fa-solid fa-arrow-left me-1"></i> {{ previousPost.data.title }}
</a>{% endif %}
</div>
<div class="col-md-6 col-6 p-3">
{%- if nextPost %}<a href="{{ nextPost.url }}" class="btn-orange btn col-12">
{{ nextPost.data.title }} <i class="fa-solid fa-arrow-right ms-1"></i>
</a>{% endif %}
</div>
</div>
</div>
</div>
{%- endif %}
{%- endif %}
